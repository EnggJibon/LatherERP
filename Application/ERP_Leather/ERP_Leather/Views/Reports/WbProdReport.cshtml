                    <div class="col-lg-10 text-right">
                        <label style="">Process and Schedule Wise Wet Blue Production Summary</label>
                    </div>
                    <div class="col-lg-1" style="">
                        <input type="radio" id="ProcessAndDrumWiseWBProdSummary" name="ReportName" value="ProcessAndDrumWiseWBProdSummary" checked="checked" />
                    </div>
                </div>
                @*<div class="row">
                <div class="col-lg-10 text-right">
                    <label style="">Production Schedule Wise Wet Blue Production Status</label>
                </div>
                <div class="col-lg-1" style="">
                    <input type="radio" id="ProdSchWiseWBProdStatus" name="ReportName" value="ProdSchWiseWBProdStatus" />
                </div>
