            if (e.keyCode == 120) {
                SelectedItemOfListOfValue('BuyerOrderWindowGrid');
                buyerOrderWindow.open();
            }
        }
    });

    var buyerOrderWindow = $('#BuyerOrderWindow').kendoWindow({
        actions: ["Minimize", "Maximize", "Close"],
        visible: false,
        width: "80%",
        height: "auto",
        title: "Buyer Order Search",
        position: { top: 100 },
        modal: true,
        groupable: true,
        draggable: true
    }).data('kendoWindow');

    //Buyer search window definition
    var BuyerOrderSearchGridDataSource = new kendo.data.DataSource({
        schema: {
            model: {
                id: "BuyerOrderID",
                fields: {
                    BuyerOrderID: { editable: false },
                    BuyerOrderNo: { editable: false },
                    OrderNo: { editable: false }
                }
            }
        },
        transport: {
            read: {
                url: '@Url.Action("GetAllBuyerOrder", "WetBlueIssue")',
                type: 'GET',
                dataType: "JSON"
            }
        },
        pageSize: 50
    });
    var buyerOrderGrid = $("#BuyerOrderWindowGrid").kendoGrid({
        dataSource: BuyerOrderSearchGridDataSource,
        pageable: true,
        editable: true,
        selectable: "row",
        navigatable: true,
        filterable: {
            extra: false,
            operators: {
                string: {
                    startswith: "Starts with",
                    contains: "Contains"
                }
            }
        },
        sortable: true,
        scrollable: true,
        height: 300,
        columns: [
            { field: "BuyerOrderID", hidden: true, title: "Order ID", width: "50px", attributes: { "class": "Readonly" }, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;text-align:left" } },
            { field: "BuyerOrderNo", title: "Order No", width: "80px", attributes: { "class": "Readonly" }, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } },
            { field: "OrderNo", title: " Buyer Order No", width: "80px", attributes: { "class": "Readonly" }, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } }
        ]
    });

    //Handling button click for Buyer Order window grid
    $('#btnBuyerOrderWindowOK').click(function () {
        ListOfValueGridEvent('BuyerOrderWindowGrid');
        buyerOrderWindow.close();
    });

    $('#btnBuyerOrderWindowCancel').click(function () {
        buyerOrderWindow.close();
    });

    $("#BuyerOrderWindow").dblclick(function () {
        ListOfValueGridEvent('BuyerOrderWindowGrid');
        buyerOrderWindow.close();
    });

    $("#BuyerOrderWindow").keypress(function (event) {
        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            ListOfValueGridEvent('BuyerOrderWindowGrid');
            buyerOrderWindow.close();
        }
            // Close Window with escape key
        else if (keycode == '27') {
            buyerOrderWindow.close();
        }
        event.stopPropagation();
    });

    //  End Buyer Order search window events End
        /*----------------------------------------------- Reset --------------------------------------------*/

        $("#btnReset").click(function () {
            $("#FromDate").val("");
            $("#ToDate").val("");
            $(".txtBox").val("");
