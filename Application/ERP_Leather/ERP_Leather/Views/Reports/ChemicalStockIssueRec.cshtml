        //$("#SelectionDue").val(selectedItem.SelectionDueQty);
        //$("#ProductionQty").val(selectedItem.ProductionQty);
        //$("#ItemQty").val(selectedItem.ItemQty);
        ////$("#UnitID").val(selectedItem.AreaUnit);
