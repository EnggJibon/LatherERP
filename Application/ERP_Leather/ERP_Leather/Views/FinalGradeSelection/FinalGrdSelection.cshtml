                        wbSelection.ConfirmedDate = '';
                        wbSelection.ConfirmedNote = '';
                        wbSelection.CheckedBy = '';
                        wbSelection.CheckDate = '';
                        wbSelection.CheckNote = '';
                        wbSelection.Remarks = '';
                        wbSelection.AverageThickness =  $("#AverageThickness").val();
                        wbSelection.LessCut =  $("#LessCut").val();
