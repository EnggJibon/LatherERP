@{
    ViewBag.Title = "Final Grade Selection";
    ViewBag.SearchTitle = "Selection No";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="headerForm">
    @Html.Partial("~/Views/Common/_FormHeader.cshtml")
</div>

<div class="row">
    <div class="FormBody">
