            <div class="col-lg-2">
                <label></label>
            </div>
            <div class="col-lg-2">
                <label>Selection No</label>
            </div>
            <div class="col-lg-4">
                <input type="text" readonly="readonly" id="WBSelectionNo" name="WBSelectionNo" placeholder="Auto" />
               
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                <label>Production Date<span style='color:red'>*</span> </label>
            </div>
            <div class="col-lg-4">              
                <input type="text" id="ProductionDate" class="datePicker" name="ProductionDate" value="" placeholder="Production Date (dd/mm/yyyy)" />
            </div>
            <div class="col-lg-2">
                <label>Selection Date<span style='color:red'>*</span></label>
            </div>
            <div class="col-lg-4">
                <input type="text" id="SelectionDate" class="datePicker" name="SelectionDate" value="" placeholder="Selection Date (dd/mm/yyyy)" />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2">
                <label>Supplier<span style='color:red'>*</span> </label>
            </div>
